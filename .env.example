# FloorMind Environment Configuration
# Copy this file to .env and fill in your API keys

# Google Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True

# Model Configuration
DEFAULT_MODEL=gemini
ENABLE_3D_FEATURES=True

# FloorMind SDXL Model Configuration
# Option 1: Full fine-tuned model
FLOORMIND_MODEL_DIR=./models/floormind_sdxl_finetuned

# Option 2: LoRA adapter (lighter weight, faster loading)
# FLOORMIND_LORA_DIR=./models/floormind_sdxl_lora

# GPU Configuration
# Set to 'true' to use GPU (10-20x faster), 'false' for CPU-only
USE_GPU=true

# File Upload Configuration
MAX_UPLOAD_SIZE=16777216  # 16MB in bytes
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif

# Output Configuration
OUTPUT_DIR=../outputs
SAMPLE_GENERATIONS_DIR=../outputs/sample_generations
METRICS_DIR=../outputs/metrics

# Performance Configuration
GENERATION_TIMEOUT=30  # seconds
MAX_BATCH_SIZE=10